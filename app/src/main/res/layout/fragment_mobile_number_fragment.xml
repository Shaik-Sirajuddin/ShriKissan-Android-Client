<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">
   <TextView
       android:id="@+id/header"
       android:text="Welcome to ShriKissan"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="#000000"
       android:layout_margin="10dp"
       android:textSize="24sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/PhoneImg"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:src="@drawable/phoneauthimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/textV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Mobile Number"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/PhoneImg"
        app:layout_constraintStart_toStartOf="@+id/PhoneImg"
        app:layout_constraintTop_toBottomOf="@+id/PhoneImg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="An OTP will be sent to your mobile number for verification"
        app:layout_constraintTop_toBottomOf="@id/textV2"
        app:layout_constraintEnd_toEndOf="@+id/textV2"
        app:layout_constraintStart_toStartOf="@+id/textV2"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        >
        <LinearLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/phoneNumber"
                android:hint="Type your phone number here"
                android:textColor="@color/black"
                android:padding="10dp"
                android:inputType="phone"
                android:background="@drawable/phone_number_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:backgroundTint="#4CAF50"
                android:id="@+id/continueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="10dp"
                android:text="Continue"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>